{
  "compilerOptions": {
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "public/src/**/*",
    "src/**/*", 
    "test/**/*",
  ],
  "exclude":[
    "node_modules",
  ]
}
